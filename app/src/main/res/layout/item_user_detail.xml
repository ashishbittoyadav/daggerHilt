<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userData"
            type="com.example.daggerhiltpoc.model.UsersItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_user_detail_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Name:- `+userData.name}"
                    android:textSize="20sp"
                    tools:text="Full Name" />

                <TextView
                    android:id="@+id/item_user_detail_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Email:- `+userData.email}"
                    tools:text="email" />

                <TextView
                    android:id="@+id/item_user_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Address:- `+userData.address.suite+` `+userData.address.street+` `+userData.address.city+` `+userData.address.zipcode}"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>